        function calcularNumeroManifiesto(data, cliente, direccion, vendedor) {
            let count = 1;
            for (let i = 0; i < data.length; i++) {
                if (data[i].cliente === cliente && (direccion !== data[i].direccion || vendedor !== data[i].vendedor)) {
                    data[i].numeroManifiesto = count++;
                    break;
                }
            }
            return count;
        }

