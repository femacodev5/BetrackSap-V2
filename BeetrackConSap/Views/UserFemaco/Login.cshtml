@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ingresar Femaco 2024</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="~/cropped-logo.png" sizes="32x32" type="image/png">
    <link rel="icon" href="~/cropped-logo.png" sizes="16x16" type="image/png">
    <link rel="manifest" href="https://getbootstrap.com/docs/5.1/assets/img/favicons/manifest.json">
    <link rel="mask-icon" href="https://getbootstrap.com/docs/5.1/assets/img/favicons/safari-pinned-tab.svg" color="#7952b3">
    <link rel="icon" href="~/cropped-logo.png">
    <meta name="theme-color" content="#7952b3">
</head>
<body>
    <style>
        .gradient-custom {
            /* fallback for old browsers */
            background: #11cbad;
            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to right, rgba(17, 203, 173, 1), rgba(128, 223, 30, 1));
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to right, rgba(17, 203, 173, 1), rgba(128, 223, 30, 1))
        }
    </style>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card text-bg-dark" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <form asp-action="Login">
                                    <input name="returnUrl" type="hidden" value="@Context.Request.Query["ReturnUrl"]" />
                                    <img src="/cropped-logo.png">
                                    <h2 class="fw-bold mb-2">Inicia Sesion</h2>
                                    <div class="form-floating text-black">
                                        <input class="form-control" id="floatingInput" name="usuario" placeholder="USUARIO">
                                        <label for="floatingInput">USUARIO</label>
                                    </div>
                                    <br />
                                    <div class="form-floating text-black">
                                        <input type="password" class="form-control" id="floatingPassword" name="clave" placeholder="CLAVE">
                                        <label for="floatingPassword">CLAVE</label>
                                    </div>
                                    <div class="checkbox mb-3">
                                        <label>
                                            <input class="form-check-input" name="recordarme" type="checkbox" value="true"> Recordarme
                                        </label>
                                    </div>
                                    <button class="btn btn-outline-light btn-lg px-5 w-100" type="submit">Ingresar</button>
                                </form>
                            </div>
                            <div>
                                <p class="mb-0">
                                    FEMACO 2024 © DPTO DE SISTEMAS
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>